import pandas as pd
import matplotlib.pyplot as plt
import seaborn as sns

# Load dataset
df = pd.read_csv("/content/orders_data.csv")

# ğŸ” Show basic info
print("ğŸ“„ First 5 records:")
print(df.head())
print("\nğŸ“Š Dataset Summary:")
print(df.describe())

# ğŸ’° Total revenue per category
df['Total'] = df['Quantity'] * df['Unit_Price']
category_revenue = df.groupby('Category')['Total'].sum().sort_values(ascending=False)
print("\nğŸ’° Revenue by Category:")
print(category_revenue)

# ğŸ“¦ Top-selling products
top_products = df.groupby('Product')['Quantity'].sum().sort_values(ascending=False)
print("\nğŸ“¦ Top-Selling Products:")
print(top_products)

# ğŸ“… Monthly order trends
df['Order_Date'] = pd.to_datetime(df['Order_Date'])
df['Month'] = df['Order_Date'].dt.to_period('M')
monthly_orders = df.groupby('Month')['Order_ID'].count()
print("\nğŸ“ˆ Monthly Order Count:")
print(monthly_orders)

# ğŸ“Š Visualizations
sns.set(style="whitegrid")

# ğŸ“Š Plot 1: Revenue per Category
plt.figure(figsize=(8,5))
sns.barplot(x=category_revenue.values, y=category_revenue.index, palette="Blues_d")
plt.title("Total Revenue by Category")
plt.xlabel("Revenue (INR)")
plt.ylabel("Category")
plt.tight_layout()
plt.show()

# ğŸ“Š Plot 2: Top-Selling Products
plt.figure(figsize=(8,5))
sns.barplot(x=top_products.values, y=top_products.index, palette="Greens_d")
plt.title("Top-Selling Products (Units Sold)")
plt.xlabel("Units Sold")
plt.ylabel("Product")
plt.tight_layout()
plt.show()

# ğŸ“Š Plot 3: Monthly Order Trend
plt.figure(figsize=(8,5))
monthly_orders.plot(marker='o')
plt.title("Monthly Order Trend")
plt.xlabel("Month")
plt.ylabel("Number of Orders")
plt.grid(True)
plt.tight_layout()
plt.show()
